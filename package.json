{
  "name": "nodecg-vue-ts-template",
  "version": "1.0.0",
  "description": "Template for NodeCG bundles that use Vue.js and TypeScript.",
  "homepage": "https://github.com/zoton2/nodecg-vue-ts-template#readme",
  "bugs": {
    "url": "https://github.com/zoton2/nodecg-vue-ts-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoton2/nodecg-vue-ts-template.git"
  },
  "license": "MIT",
  "author": "zoton2",
  "scripts": {
    "autofix": "run-s autofix:*",
    "autofix:browser": "npx eslint --fix --ext .ts,.vue src/dashboard && npx eslint --fix --ext .ts,.vue src/graphics && npx eslint --fix --ext .ts src/browser_shared",
    "autofix:extension": "npx eslint --fix --ext .ts src/extension",
    "build": "run-s build:*",
    "build:browser": "trash .cache && cross-env NODE_ENV=production npm run bundle",
    "build:extension": "trash extension && npx tsc -b tsconfig.extension.json",
    "bundle": "trash graphics && trash dashboard && node script/bundle.js",
    "start": "node ../..",
    "typeschemas": "node script/typeschemas.js",
    "watch": "run-p watch:*",
    "watch:browser": "npm run bundle",
    "watch:extension": "trash extension && npx tsc -b tsconfig.extension.json -w"
  },
  "dependencies": {
    "clone": "^2.1.2"
  },
  "devDependencies": {
    "@mdi/font": "^4.3.95",
    "@types/clone": "^0.1.30",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "@vue/component-compiler-utils": "^3.0.0",
    "cross-env": "^5.2.1",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-vue": "^5.2.3",
    "json-schema-to-typescript": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "trash-cli": "^3.0.0",
    "typescript": "^3.6.2",
    "vue": "^2.6.10",
    "vue-hot-reload-api": "^2.3.3",
    "vue-template-compiler": "^2.6.10",
    "vuedraggable": "^2.23.0",
    "vuetify": "^2.0.15",
    "vuex": "^3.1.1"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.esm.js"
  },
  "nodecg": {
    "compatibleRange": "^1.5.0",
    "dashboardPanels": [
      {
        "name": "example",
        "title": "Example",
        "file": "example.html"
      }
    ],
    "graphics": [
      {
        "file": "example.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "vue": {
    "runtimeCompiler": true
  }
}
